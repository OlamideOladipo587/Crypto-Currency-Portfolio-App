

<Currency>:
    orientation: 'vertical' 
    spacing: dp(12)
    padding: [0, dp(12), 0, dp(8)]
    BoxLayout:
        orientation: "vertical"
        spacing: dp(8)
        padding: [dp(12), dp(12), 0, dp(4)]
        size_hint_y: .3
        Text:
            text: "Popular"
            color: app.colors.white
            font_name: app.fonts.body
            font_size: app.fonts.size.h4
            size_hint_y: None
            height: dp(18)
        BoxLayout:
            ScrollView:
                do_scroll: [True, False]
                size_hint: [None, None]
                bar_inactive_color: [0,0,0,0]
                bar_active_color: [0,0,0,0]
                size: self.parent.size
                GridLayout:
                    id: gl_popular
                    rows: 1
                    size_hint: [None, None]
                    size: self.minimum_size
                    spacing: sp(12)
    BoxLayout:
        size_hint_y: .7
        padding: [dp(12), dp(4)]
        spacing: dp(8)
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: dp(18)
            Text:
                text: "All Currencies"
                color: app.colors.white
                font_name: app.fonts.body
                font_size: app.fonts.size.h4
            FlatButton:
                text: "refresh"
                underline: True
                color: app.colors.white
                font_name: app.fonts.body
                font_size: app.fonts.size.h5
                size_hint_x: .3
                on_release: root.refresh()
        BoxLayout:
            ScrollView:
                do_scroll: [False, True]
                size_hint_y: None
                height: self.parent.height
                bar_active_color: [0,0,0,0]
                bar_inactive_color: [0,0,0,0]
                GridLayout:
                    id: gl_currencies
                    cols: 1
                    spacing: dp(4)
                    size_hint_y: None
                    height: self.minimum_height